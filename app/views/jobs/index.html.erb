<div class="col-md-12">
  <div class="job">
    <%= link_to("new job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th> title </th>
        <th></th>
        <th> created_at</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td>
            <%= link_to('Edit', edit_job_path(job), class: "btn btn-sm btn-default") %>
            <%= link_to("Delete", job_path(job), class: "btn btn-sm btn-default",
            method: :delete, data:{confirm: "r u sure?" }) %>
            <td><%= job.created_at %></td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
