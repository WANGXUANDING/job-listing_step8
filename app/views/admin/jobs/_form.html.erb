<%= form_for @job do |f| %>
<div class="form-group">
  <div class="form-group string optional">
    <%= f.label "职位", :class => "string optional control-label" %>
    <%= f.text_field :title, :class => "string optional form-control" %>
  </div>
  <div class="form-group string optional">
    <%= f.label "职位描述", :class => "string optional control-label" %>
    <%= f.text_area :description, :class => "string optional form-control" %>
  </div>
  <div class="form-group string optional">
    <%= f.label "薪资下限", :class => "string optional control-label" %>
    <%= f.text_field :wage_lower_bound, :class => "string optional form-control" %>
  </div>
  <div class="form-group string optional">
    <%= f.label "薪资上限", :class => "string optional control-label" %>
    <%= f.text_field :wage_upper_bound, :class => "string optional form-control" %>
  </div>
  <div class="form-group string optional">
    <%= f.label "contact email", :class => "string optional control-label" %>
    <%= f.text_field :contact_email, :class => "string optional form-control" %>
  </div>

</div>
<%= f.submit "Submit", class: "btn btn-primary", data: {disable_with: "Submiting..."} %>
<% end %>
